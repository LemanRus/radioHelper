<Calculations>:
    ScreenManager:
        id: calculations_sm
        on_parent: app.add_me_to_sm(self, list(root.ids.keys())[0])
        CalculationListScreen:
        ResistorLEDCalculateScreen:
        InductorCalculateScreen:
        ParallelResistorCalculateScreen:
        SerialCapacitorCalculateScreen:
        VoltageDividerCalculateScreen:
        LM317CalculateScreen:
        LM317Current:
        LM317Voltage:

<CalculationListScreen>:
    name: "calculations"
    BoxLayout:
        orientation: "vertical"
        MDScreenTitle:
            text: "Расчёт компонентов"
            #font_size: app.app_header_size
        MDSeparator:
            height: dp(3)
        MDCard:
            padding: 80, 10, 10, 10
            MDIcon:
                icon: "rectangle-outline"
                pos_hint: {"center_x": 0.5, "center_y": .5}
            MDRaisedButton:
                text: "Расчёт резисторов для светодиодов"
                #font_size: app.app_button_size
                text_size: self.size
                halign: "center"
                valign: "center"
                pos_hint: {"center_x": 0.5, "center_y": .5}
                on_release: root.manager.current = "LED_cal"
            Widget:
        MDCard:
            padding: 80, 10, 10, 10
            MDIcon:
                icon: "rectangle-outline"
                pos_hint: {"center_x": 0.5, "center_y": .5}
            MDRaisedButton:
                text: "Расчёт катушки индуктивности"
                #font_size: app.app_button_size
                text_size: self.size
                halign: "center"
                valign: "center"
                pos_hint: {"center_x": 0.5, "center_y": .5}
                on_release: root.manager.current = "inductor_cal"
            Widget:
        MDCard:
            padding: 80, 10, 10, 10
            MDIcon:
                icon: "rectangle-outline"
                pos_hint: {"center_x": 0.5, "center_y": .5}
            MDRaisedButton:
                text: "Параллельное соединение резисторов"
                #font_size: app.app_button_size
                text_size: self.size
                halign: "center"
                valign: "center"
                pos_hint: {"left": 1, "center_y": .5}
                on_release: root.manager.current = "par_resistor_cal"
            Widget:
        MDCard:
            padding: 80, 10, 10, 10
            MDIcon:
                icon: "rectangle-outline"
                pos_hint: {"center_x": 0.5, "center_y": .5}
            MDRaisedButton:
                text: "Последовательное соединение конденсаторов"
                #font_size: app.app_button_size
                text_size: self.size
                halign: "center"
                valign: "center"
                pos_hint: {"center_x": 0.5, "center_y": .5}
                on_release: root.manager.current = "ser_capacitor_cal"
            Widget:
        MDCard:
            padding: 80, 10, 10, 10
            MDIcon:
                icon: "rectangle-outline"
                pos_hint: {"center_x": 0.5, "center_y": .5}
            MDRaisedButton:
                text: "Делитель напряжения"
                #font_size: app.app_button_size
                text_size: self.size
                halign: "center"
                valign: "center"
                pos_hint: {"center_x": 0.5, "center_y": .5}
                on_release: root.manager.current = "divider_cal"
            Widget:
        MDCard:
            padding: 80, 10, 10, 10
            MDIcon:
                icon: "rectangle-outline"
                pos_hint: {"center_x": 0.5, "center_y": .5}
            MDRaisedButton:
                text: "LM317/LM350/LM338 калькулятор"
                #font_size: app.app_button_size
                text_size: self.size
                halign: "center"
                valign: "center"
                pos_hint: {"center_x": 0.5, "center_y": .5}
                on_release: root.manager.current = "lm317_cal"
            Widget:
