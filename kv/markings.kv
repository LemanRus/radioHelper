<Markings>:
    ScreenManager:
        id: markings_sm
        on_parent: app.add_me_to_sm(self, list(root.ids.keys())[0])
        NominalsScreen:
        ResistorsMarking:
        CapacitorsMarking:

<NominalsScreen>:
    id: nominals
    name: "nominals"
    BoxLayout:
        orientation: "vertical"
        MDScreenTitle:
            text: "Маркировки компонентов"
            #font_size: app.app_header_size
#                        size_hint: 1, None
        MDSeparator:
            height: dp(3)
        BoxLayout:
            GridLayout:
                cols: 1
                MDCard:
                    padding: 80, 10, 10, 10
                    MDIcon:
                        icon: "rectangle-outline"
                        pos_hint: {"center_x": 0.5, "center_y": .5}
                    MDRaisedButton:
                        text: "Резисторы"
                        pos_hint: {"center_x": 0.5, "center_y": .5}
        #                        size_hint: 1, 1
                        #font_size: app.app_button_size
                        text_size: self.size
                        halign: "center"
                        valign: "center"
                        on_release: root.manager.current = "resistor"
                    Widget:
                MDCard:
                    padding: 80, 10, 10, 10
                    MDIcon:
                        icon: "arrow-split-vertical"
                        pos_hint: {"center_x": 0.5, "center_y": .5}
                    MDRaisedButton:
                        pos_hint: {"center_x": 0.5, "center_y": .5}
                        text: "Конденсаторы"
        #                        size_hint: 1, 1
                        #font_size: app.app_button_size
                        text_size: self.size
                        halign: "center"
                        valign: "center"
                        on_release: root.manager.current = "capacitor"
                    Widget: