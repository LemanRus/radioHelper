<MDLabelCenter@MDLabel>:
    text_size: self.size
    halign: "center"
    valign: "center"

<MDScreenTitle@MDLabel>:
    adaptive_height: True
    font_style: "H5"
    halign: "center"
    text_size: self.size

<MDFlatButtonTransLeft@MDFlatButton>:
    text_size: self.size
    halign: "center"
    valign: "center"
    pos_hint: {"left": 1, "center_y": .5}

<MDCard10@MDCard>:
    padding: 10, 10, 10, 10

<RippleCard@MDCard>:
    ripple_behavior: True
    padding: 10, 10, 10, 10

<RippleCard30@MDCard>:
    ripple_behavior: True
    padding: 30, 10, 10, 10