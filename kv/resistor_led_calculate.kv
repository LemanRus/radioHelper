<ResistorLEDCalculateScreen>:
    name: "LED_cal"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            MDLabel:
                text: "Напряжение источника питания:"
                text_size: self.size
                # # font_size: app.app_# font_size
                halign: "center"
                valign: "center"
            TextInput:
                id: led_vol
                size_hint_x: 0.2
                text: '5'
                # font_size: app.app_# font_size
                multiline: False
                halign: "center"
                padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
                on_text_validate:
            MDLabel:
                size_hint_x: 0.1
                text: "В"
                text_size: self.size
                # font_size: app.app_# font_size
                halign: "center"
                valign: "center"
            Widget:
                size_hint_x: 0.52
        BoxLayout:
            size_hint_y: 2
            BoxLayout:
                orientation: "vertical"
                BoxLayout:
                    MDLabel:
                        text: "Напряжение питания светодиода:"
                        text_size: self.size
                        # font_size: app.app_# font_size
                        halign: "center"
                        valign: "center"
                    TextInput:
                        id: led_vol_input
                        size_hint_x: 0.2
                        # font_size: app.app_# font_size
                        multiline: False
                        halign: "center"
                        padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
                        on_text_validate:
                    MDLabel:
                        size_hint_x: 0.1
                        text: "В"
                        text_size: self.size
                        # font_size: app.app_# font_size
                        halign: "center"
                        valign: "center"
                BoxLayout:
                    MDLabel:
                        text: "Ток светодиода:"
                        text_size: self.size
                        # font_size: app.app_# font_size
                        halign: "center"
                        valign: "center"
                    TextInput:
                        id: led_cur_input
                        size_hint_x: 0.2
                        # font_size: app.app_# font_size
                        multiline: False
                        halign: "center"
                        padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
                        on_text_validate:
                    MDLabel:
                        size_hint_x: 0.1
                        text: "мА"
                        text_size: self.size
                        # font_size: app.app_# font_size
                        halign: "center"
                        valign: "center"
            RippleCard:
                size_hint_x: 0.4
                on_parent: root.build_me()
                on_release: root.menu.open()
                id: resistor_marking_menu
                MDLabelCenter:
                    id: resistor_marking_menu_name
                    text: "Выберите"
                    on_text: led_vol_input.text = str(root.diodes[self.text][0])
                    on_text: led_cur_input.text = str(root.diodes[self.text][1])

        BoxLayout:
            MDLabel:
                text: "Количество светодиодов:"
                text_size: self.size
                # font_size: app.app_# font_size
                halign: "center"
                valign: "center"
            TextInput:
                id: led_quantity
                size_hint_x: 0.2
                text: '1'
                # font_size: app.app_# font_size
                multiline: False
                halign: "center"
                padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
                on_text_validate:
            MDLabel:
                size_hint_x: 0.1
                text: "шт"
                text_size: self.size
                # font_size: app.app_# font_size
                halign: "center"
                valign: "center"
            Widget:
                size_hint_x: 0.52
        RippleCard:
            on_release: root.led_calculate(led_vol.text, led_vol_input.text, led_cur_input.text, led_quantity.text)
            MDLabelCenter:
                text: "Рассчитать!"
        MDLabel:
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: 0.03
        MDLabelCenter:
            text: "Результат:"
        BoxLayout:
            MDLabelCenter:
                text: "Расчётное сопротивление:"
            MDCard10:
                size_hint_x: 0.3
                MDLabelCenter:
                    canvas.before:
                        Color:
                            rgba: (.5,.5,.5,.7)
                        Line:
                            width: 1.1
                            rectangle: self.x, self.y, self.width, self.height
                    id: led_result
        BoxLayout:
            MDLabelCenter:
                text: "Стандартное значение:"
            MDCard10:
                size_hint_x: 0.3
                MDLabelCenter:
                    canvas.before:
                        Color:
                            rgba: (.5,.5,.5,.7)
                        Line:
                            width: 1.1
                            rectangle: self.x, self.y, self.width, self.height
                    id: led_e24
        BoxLayout:
            MDLabelCenter:
                text: "Рассеиваемая на резисторе мощность:"
            MDCard10:
                size_hint_x: 0.3
                MDLabelCenter:
                    canvas.before:
                        Color:
                            rgba: (.5,.5,.5,.7)
                        Line:
                            width: 1.1
                            rectangle: self.x, self.y, self.width, self.height
                    id: led_res_power

        BoxLayout:
            MDLabelCenter:
                text: "Потребляемый ток:"
            MDCard10:
                size_hint_x: 0.3
                MDLabelCenter:
                    canvas.before:
                        Color:
                            rgba: (.5,.5,.5,.7)
                        Line:
                            width: 1.1
                            rectangle: self.x, self.y, self.width, self.height
                    id: led_cur
