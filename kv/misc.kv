#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import RectangularElevationBehavior kivymd.uix.behaviors

<MDLabelCenter@MDLabel>:
    text_size: self.size
    halign: "center"
    valign: "center"

<MDBorderedLabel@MDLabel>:
    canvas.before:
        Color:
            rgba: (.5,.5,.5,.7)
        Line:
            width: 1.1
            rectangle: self.x, self.y, self.width, self.height
    text_size: self.size
    halign: "center"
    valign: "center"

<MDScreenTitle@MDLabel>:
    adaptive_height: True
    font_style: "H5"
    halign: "center"
    text_size: self.size

<MDFlatButtonTransLeft@MDFlatButton>:
    text_size: self.size
    halign: "center"
    valign: "center"
    pos_hint: {"left": 1, "center_y": .5}

<MD3Card>:

<BlueButton@MD3Card>:
    ripple_behavior: True
    padding: 10, 10, 10, 10
    md_bg_color: get_color_from_hex("#2397f3")

<CalculateButton@MD3Card>:
    ripple_behavior: True
    padding: 10, 10, 10, 10
    md_bg_color: get_color_from_hex("#2397f3")
    MDLabelCenter:
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        text: "Рассчитать!"

<MDCard10@MD3Card>:
    padding: 10, 10, 10, 10

<MDCard5@MD3Card>:
    padding: 5, 5, 5, 5

<MDCard20@MD3Card>:
    padding: 20, 20, 20, 20

<RippleCard@MD3Card>:
    ripple_behavior: True
    padding: 10, 10, 10, 10

<RippleCard30@MD3Card>:
    ripple_behavior: True
    padding: 30, 10, 10, 10

<BorderedCard10@MDCard10>:
    canvas.after:
        Color:
            rgba: (.5,.5,.5,.7)
        Line:
            width: 1.1
            rectangle: self.x + sp(5), self.y + sp(5), self.width - sp(10), self.height - sp(10)

<BorderedCard20@MDCard20>:
    canvas.after:
        Color:
            rgba: (.5,.5,.5,.7)
        Line:
            width: 1.1
            rectangle: self.x + sp(15), self.y + sp(15), self.width - sp(30), self.height - sp(30)

<BRCard30@RippleCard30>:
    canvas.after:
        Color:
            rgba: (.5,.5,.5,.7)
        Line:
            width: 1.1
            rectangle: self.x + sp(15), self.y + sp(15), self.width - sp(30), self.height - sp(30)