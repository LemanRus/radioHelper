<MySpinnerOption>:
#    font_size: app.app_button_size
    color: [0, 0, 0, 1] if self.text in ["white", "yellow", "gold", "silver"] else [1, 1, 1, 1]
    background_color: self.colors[self.text] if self.text in self.colors.keys() else [0.5, 0.5, 0.5, 1]
    background_normal: ""

<ResistorsMarking>:
    id: test
    name: "resistor"
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            MDLabelCenter:
                text: "Для резисторов сквозного монтажа выберите количество полос:"

#                        font_size: app.app_font_size
#                        size_hint_x: 2
            Spinner:
                id: main_spinner
                text: '3'
#                        font_size: app.app_button_size
                values: '3', '4', '5', '6'
                on_parent: root.build_resistor(self.text)
                on_text: root.build_resistor(self.text)
                option_cls: "MySpinnerOption"
        BoxLayout:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "./img/resistor.png"
            id: resistor_grid
            size_hint_y: 1.5
            MDLabel:
#                        size_hint_x: 0.25
            BoxLayout:
                id: resistor_bands
                size_hint_y: 0.75
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            MDLabel:
#                        size_hint_x: 0.25

        MDRaisedButton:
            text: "Рассчитать!"
#                    font_size: app.app_button_size
            text_size: self.size
            halign: "center"
            valign: "center"
            on_release: root.calculate_resistor()
        MDLabelCenter:
            id: resistance

        MDLabelCenter:
            text: "Для SMD резистора впишите в поле ниже маркировку с резистора: "
            text_size: self.size

        BoxLayout:
            TextInput:
                id: smd_input
#                        font_size: app.app_font_size
                multiline: False
                halign: "center"
                padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
                on_text_validate: root.calculate_smd_resistor(self.text)
            MDRaisedButton:
                text: "Рассчитать"
#                        size_hint: 0.2, None
#                        font_size: app.app_button_size
                text_size: self.size
                halign: "center"
                valign: "center"
                on_release: root.calculate_smd_resistor(smd_input.text)
        MDLabelCenter:
            id: smd_resistance

        MDRaisedButton:
            text: "Назад"
#                        font_size: app.app_button_size
            text_size: self.size
            halign: "center"
            valign: "center"
            on_release: test.manager.current = "nominals"
