<ParallelResistorCalculateScreen>:
    name: "par_resistor_cal"
    on_pre_enter: self.reset()
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: 5
            BoxLayout:
                id: par_res_box
                orientation: "vertical"
            BlueButton:
                size_hint_x: 0.4
                on_release: root.add_resistor()
                MDLabelCenter:
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    text: "Добавить резистор"
        MDSeparator:
        BlueButton:
            on_release: root.reset()
            MDLabelCenter:
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                text: "Очистить"
        MDSeparator:
        BlueButton:
            on_release: root.par_res_calculate()
            MDLabelCenter:
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                text: "Рассчитать!"
        MDSeparator:
        BoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Результат:"
            MDCard10:
                MDBorderedLabel:
                    id: par_res_output
