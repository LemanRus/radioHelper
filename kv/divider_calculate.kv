<VoltageDividerCalculateScreen>:
    name: "divider_cal"
    BoxLayout:
        orientation: "vertical"
        MDScreenTitle:
            text: "Расчёт делителя напряжения"
        MDSeparator:
            height: dp(3)
        RippleCard:
            on_release: root.manager.current = "divider_vout"
            MDLabelCenter:
                text: "Расчёт выходного напряжения"
        MDSeparator:
        RippleCard:
            on_release: root.manager.current = "divider_r2"
            MDLabelCenter:
                text: "Расчёт сопротивления"

<VoltageDividerVout>:
    name: "divider_vout"
    BoxLayout:
        orientation: "vertical"
        MDScreenTitle:
            text: "Расчёт выходного напряжения"
        MDSeparator:
            height: dp(3)
        BoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Напряжение источника питания:"
            MDCard5:
                size_hint_x: 0.4
                TextInput:
                    id: v_in
                    multiline: False
                    halign: "center"
                    padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
            MDCard10:
                size_hint_x: 0.2
                MDLabelCenter:
                    text: "В"
        BoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Сопротивление R1:"
            MDCard5:
                size_hint_x: 0.4
                TextInput:
                    id: r1
                    size_hint_x: 0.1
                    multiline: False
                    halign: "center"
                    padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
            MDCard10:
                size_hint_x: 0.2
                MDLabelCenter:
                    text: "Ом"
                    text_size: self.size
                    halign: "center"
                    valign: "center"
        BoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Сопротивление R2:"
            MDCard5:
                size_hint_x: 0.4
                TextInput:
                    id: r2
                    multiline: False
                    halign: "center"
                    padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
            MDCard10:
                size_hint_x: 0.2
                MDLabelCenter:
                    text: "Ом"
        MDSeparator:
        CalculateButton:
            on_release: root.divider_calculate_vout(v_in.text, r1.text, r2.text)
        MDSeparator:
        MDCard10
            MDLabelCenter:
                text: "Результат:"
        BoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Выходное напряжение:"
            MDCard10:
                size_hint_x: 0.4
                MDBorderedLabel:
                    id: v_out
            MDCard5
                size_hint_x: 0.2
                MDLabelCenter:
                    text: "В"
        BoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Коэффициент делителя"
            MDCard10:
                size_hint_x: 0.4
                MDBorderedLabel:
                    id: divider_rate
            MDCard10:
                size_hint_x: 0.2

<VoltageDividerR2>:
    name: "divider_r2"
    BoxLayout:
        orientation: "vertical"
        MDScreenTitle:
            text: "Расчёт сопротивления"
        MDSeparator:
            height: dp(3)
        BoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Напряжение источника питания:"
            MDCard5:
                size_hint_x: 0.4
                TextInput:
                    id: v_in_r
                    multiline: False
                    halign: "center"
                    padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
            MDCard10:
                size_hint_x: 0.2
                MDLabelCenter:
                    text: "В"
        BoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Выходное напряжение:"
            MDCard5:
                size_hint_x: 0.4
                TextInput:
                    id: v_out_r
                    multiline: False
                    halign: "center"
                    padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
            MDCard10:
                size_hint_x: 0.2
                MDLabelCenter:
                    text: "В"
        BoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Сопротивление R1:"
            MDCard5:
                size_hint_x: 0.4
                TextInput:
                    id: r1_input
                    multiline: False
                    halign: "center"
                    padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
            MDCard10:
                size_hint_x: 0.2
                MDLabelCenter:
                    text: "Ом"
        MDSeparator:
        CalculateButton:
            on_release: root.divider_calculate_r(v_in_r.text, v_out_r.text, r1_input.text)
        MDSeparator:
        MDCard10:
            MDLabelCenter:
                text: "Результат:"
        BoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Сопротивление R2"
            MDCard10:
                size_hint_x: 0.6
                MDBorderedLabel:
                    id: r2_calculated
        BoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Коэффициент делителя"
            MDCard10:
                size_hint_x: 0.6
                MDBorderedLabel:
                    id: divider_rate_r
        BoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Резистор стандартного ряда"
            MDCard10:
                size_hint_x: 0.6
                MDBorderedLabel:
                    id: r2_e24
        BoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Выходное напряжение с резистором из стандартного ряда"
            MDCard10:
                size_hint_x: 0.6
                MDBorderedLabel:
                    id: vout_e24