                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
        BoxLayout:
            Button:
                text: "Назад"
                font_size: app.app_button_size
                text_size: self.size
                halign: "center"
                valign: "center"
                on_release: root.manager.current = "components"
            Button:
                text: "На главный"
                font_size: app.app_button_size
                text_size: self.size
                halign: "center"
                valign: "center"
                on_release: root.manager.current = "main"
