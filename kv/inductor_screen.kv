<InductorCalculateScreen>:
    name: "inductor_cal"
    BoxLayout:
        orientation: "vertical"
        MDLabel:
            text: "Расчёт длины намотки и числа витков"
            text_size: self.size
            font_size: app.app_font_size
            halign: "center"
            valign: "center"
        BoxLayout:
            MDLabel:
                text: "Индуктивность:"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
            TextInput:
                id: henrys
                size_hint_x: 0.2
                font_size: app.app_font_size
                multiline: False
                halign: "center"
                padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
                on_text_validate:
            MDLabel:
                size_hint_x: 0.1
                text: "мкГн"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
        BoxLayout:
            MDLabel:
                text: "Диаметр каркаса:"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
            TextInput:
                id: inductor_diameter
                size_hint_x: 0.2
                font_size: app.app_font_size
                multiline: False
                halign: "center"
                padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
                on_text_validate:
            MDLabel:
                size_hint_x: 0.1
                text: "мм"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
        BoxLayout:
            MDLabel:
                text: "Диаметр провода:"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
            TextInput:
                id: inductor_oneturn
                size_hint_x: 0.2
                font_size: app.app_font_size
                multiline: False
                halign: "center"
                padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
                on_text_validate:
            MDLabel:
                size_hint_x: 0.1
                text: "мм"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
        Button:
            text: "Рассчитать!"
            font_size: app.app_button_size
            text_size: self.size
            halign: "center"
            valign: "center"
            on_release: root.inductor_calculate_turns(henrys.text, inductor_diameter.text, inductor_oneturn.text)
        MDLabel:
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: 0.05
        BoxLayout:
            size_hint_y: 2
            MDLabel:
                text: "Число витков:"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
            BoxLayout:
                orientation: "vertical"
                MDLabel:
                    text: "Расчётное значение"
                    text_size: self.size
                    font_size: app.app_font_size
                    halign: "center"
                    valign: "center"
                MDLabel:
                    text: "Целое значение"
                    text_size: self.size
                    font_size: app.app_font_size
                    halign: "center"
                    valign: "center"
            BoxLayout:
                orientation: "vertical"
                MDLabel:
                    id: inductor_turns
                    text_size: self.size
                    font_size: app.app_font_size
                    halign: "center"
                    valign: "center"
                MDLabel:
                    id: inductor_turns_int
                    text_size: self.size
                    font_size: app.app_font_size
                    halign: "center"
                    valign: "center"
        BoxLayout:
            size_hint_y: 2
            MDLabel:
                text: "Длина намотки:"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
            BoxLayout:
                orientation: "vertical"
                MDLabel:
                    text: "Расчётное значение"
                    text_size: self.size
                    font_size: app.app_font_size
                    halign: "center"
                    valign: "center"
                MDLabel:
                    text: "Целое значение"
                    text_size: self.size
                    font_size: app.app_font_size
                    halign: "center"
                    valign: "center"
            BoxLayout:
                orientation: "vertical"
                MDLabel:
                    id: inductor_length
                    text_size: self.size
                    font_size: app.app_font_size
                    halign: "center"
                    valign: "center"
                MDLabel:
                    id: inductor_length_int
                    text_size: self.size
                    font_size: app.app_font_size
                    halign: "center"
                    valign: "center"
        MDLabel:
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: 0.05
        MDLabel:
            text: "Расчёт индуктивности:"
            text_size: self.size
            font_size: app.app_font_size
            halign: "center"
            valign: "center"
        BoxLayout:
            MDLabel:
                text: "Число витков:"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
            TextInput:
                id: inductor_turns_input
                size_hint_x: 0.2
                font_size: app.app_font_size
                multiline: False
                halign: "center"
                padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
                on_text_validate:
            MDLabel:
                text: 'шт'
                size_hint_x: 0.1
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
        BoxLayout:
            MDLabel:
                text: "Диаметр каркаса:"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
            TextInput:
                id: inductor_diameter_input
                size_hint_x: 0.2
                font_size: app.app_font_size
                multiline: False
                halign: "center"
                padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
                on_text_validate:
            MDLabel:
                text: 'мм'
                size_hint_x: 0.1
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
        BoxLayout:
            MDLabel:
                text: "Длина намотки:"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
            TextInput:
                id: inductor_length_input
                size_hint_x: 0.2
                font_size: app.app_font_size
                multiline: False
                halign: "center"
                padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
                on_text_validate:
            MDLabel:
                text: 'мм'
                size_hint_x: 0.1
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
        Button:
            text: "Рассчитать!"
            font_size: app.app_button_size
            text_size: self.size
            halign: "center"
            valign: "center"
            on_release: root.inductor_calculate_henrys(inductor_turns_input.text, inductor_diameter_input.text, inductor_length_input.text)
        MDLabel:
            canvas.before:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint_y: 0.05
        BoxLayout:
            MDLabel:
                text: "Индуктивность:"
                text_size: self.size
                font_size: app.app_font_size
                halign: "center"
                valign: "center"
            MDLabel:
