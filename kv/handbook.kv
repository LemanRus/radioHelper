<Handbook>:
    ScreenManager:
        id: handbook_sm
        on_parent: app.add_me_to_sm(self, list(root.ids.keys())[0])
        HandbookScreen:

        Tables:
        Theory:
        Symbols:
        Pinout:
        Connections:
        Components:
        Lifehacks:

<HandbookScreen>:
    name: "handbook"
    MDBoxLayout:
        orientation: "vertical"
        MDScreenTitle:
            text: "Справочники и таблицы"
        MDSeparator:
            height: dp(3)
        RippleCard30:
            on_release: root.manager.current  = "theory"
            MDIcon:
                icon: "rectangle-outline"
                pos_hint: {"center_x": 0.5, "center_y": .5}
                size_hint_x: None
            MDLabel:
                text: "Теория"
                text_size: self.size
                valign: "center"
        MDSeparator:
        RippleCard30:
            on_release: root.manager.current = "symbols"
            MDIcon:
                icon: "rectangle-outline"
                pos_hint: {"center_x": 0.5, "center_y": .5}
                size_hint_x: None
            MDLabel:
                text: "Обозначения на схемах"
                text_size: self.size
                valign: "center"
        MDSeparator:
        RippleCard30:
            on_release: root.manager.current = "pinout"
