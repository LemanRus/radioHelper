<SerialCapacitorCalculateScreen>:
    name: "ser_capacitor_cal"
    on_pre_enter: self.reset()
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: 5
            BoxLayout:
                id: ser_cap_box
                orientation: "vertical"
            BoxLayout:
                orientation: "vertical"
                size_hint_x: 0.4
                MDCard:
                BlueButton:
                    on_release: root.add_capacitor()
                    MDLabelCenter:
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                        text: "Добавить конденсатор"
                MDCard:
        MDSeparator:
        BlueButton:
            on_release: root.reset()
            MDLabelCenter:
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                text: "Очистить"
        MDSeparator:
        CalculateButton:
            on_release: root.ser_cap_calculate()
        MDSeparator:
        BoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Результат:"
            MDCard10:
                MDBorderedLabel:
                    id: ser_cap_output
