<InductorCalculateScreen>:
    name: "inductor_cal"
    BoxLayout:
        orientation: "vertical"
        MDScreenTitle:
            text: "Расчёт катушки индуктивности"
        MDSeparator:
            height: dp(3)
        RippleCard:
            on_release: root.manager.current = "inductor_turns"
            MDLabelCenter:
                text: "Расчёт длины намотки и числа витков"
        MDSeparator:
        RippleCard:
            on_release: root.manager.current = "inductor_henrys"
            MDLabelCenter:
                text: "Расчёт индуктивности"

<InductorCalculateTurns>:
    name: "inductor_turns"
    BoxLayout:
        orientation: "vertical"
        MDScreenTitle:
            text: "Расчёт длины намотки и числа витков"
        MDSeparator:
            height: dp(3)
        BoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Индуктивность:"
            MDCard5:
                size_hint_x: 0.4
                TextInput:
                    id: henrys
                    multiline: False
                    halign: "center"
                    padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
            MDCard10:
                size_hint_x: 0.2
                MDLabelCenter:
                    text: "мкГн"
        BoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Диаметр каркаса:"
            MDCard5:
                size_hint_x: 0.4
                TextInput:
                    id: inductor_diameter
                    multiline: False
                    halign: "center"
                    padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
            MDCard10:
                size_hint_x: 0.2
                MDLabelCenter:
                    text: "мм"
        BoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Диаметр провода:"
            MDCard5:
                size_hint_x: 0.4
                TextInput:
                    id: inductor_oneturn
                    multiline: False
                    halign: "center"
                    padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
            MDCard10:
                size_hint_x: 0.2
                MDLabelCenter:
                    text: "мм"
        MDSeparator:
        CalculateButton:
            on_release: root.inductor_calculate_turns(henrys.text, inductor_diameter.text, inductor_oneturn.text)
        MDSeparator:
        BoxLayout:
            size_hint_y: 2
            MDCard10:
                MDLabelCenter:
                    text: "Число витков:"
            BoxLayout:
                orientation: "vertical"
                MDCard10:
                    MDLabelCenter:
                        text: "Расчётное значение"
                MDCard10:
                    MDLabelCenter:
                        text: "Целое значение"
            BoxLayout:
                orientation: "vertical"
                MDCard10:
                    MDBorderedLabel:
                        id: inductor_turns
                MDCard10:
                    MDBorderedLabel:
                        id: inductor_turns_int
        MDSeparator:
        BoxLayout:
            size_hint_y: 2
            MDCard10:
                MDLabelCenter:
                    text: "Длина намотки:"
            BoxLayout:
                orientation: "vertical"
                MDCard10
                    MDLabelCenter:
                        text: "Расчётное значение"
                MDCard10:
                    MDLabelCenter:
                        text: "Целое значение"
            BoxLayout:
                orientation: "vertical"
                MDCard10:
                    MDBorderedLabel:
                        id: inductor_length
                MDCard10:
                    MDBorderedLabel:
                        id: inductor_length_int

<InductorCalculateHenrys>:
    name: "inductor_henrys"
    BoxLayout:
        orientation: "vertical"
        MDScreenTitle:
            text: "Расчёт индуктивности:"
        MDSeparator:
            height: dp(3)
        BoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Число витков:"
            MDCard5:
                size_hint_x: 0.4
                TextInput:
                    id: inductor_turns_input
                    multiline: False
                    halign: "center"
                    padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
            MDCard10:
                size_hint_x: 0.2
                MDLabelCenter:
                    text: 'шт'
        BoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Диаметр каркаса:"
            MDCard5:
                size_hint_x: 0.4
                TextInput:
                    id: inductor_diameter_input
                    multiline: False
                    halign: "center"
                    padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
            MDCard10:
                size_hint_x: 0.2
                MDLabelCenter:
                    text: 'мм'
        BoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Длина намотки:"
            MDCard5:
                size_hint_x: 0.4
                TextInput:
                    id: inductor_length_input
                    multiline: False
                    halign: "center"
                    padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
            MDCard10:
                size_hint_x: 0.2
                MDLabelCenter:
                    text: 'мм'
        MDSeparator:
        CalculateButton:
            on_release: root.inductor_calculate_henrys(inductor_turns_input.text, inductor_diameter_input.text, inductor_length_input.text)
        MDSeparator:
        BoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Индуктивность:"
            MDCard10:
                MDBorderedLabel:
                    id: induction