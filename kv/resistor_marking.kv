<MySpinnerOption>:
#    font_size: app.app_button_size
    color: [0, 0, 0, 1] if self.text in ["white", "yellow", "gold", "silver"] else [1, 1, 1, 1]
    background_color: self.colors[self.text] if self.text in self.colors.keys() else [0.5, 0.5, 0.5, 1]
    background_normal: ""

<CenterItem>:
    pos_hint: {"center_y": .5}
    MDLabelCenter:
        text: root.text
        pos_hint: {"center_y": .5}

<CenterList>:
    CenterItem:
        id: item_text
        text: root.center_text

<ResistorsMarking>:
    id: resistor
    name: "resistor"
    MDBoxLayout:
        orientation: "vertical"
        MDBoxLayout:
            RippleCard:
                MDLabelCenter:
                    text: "Для резисторов сквозного монтажа выберите количество полос:"

    #                        font_size: app.app_font_size
    #                        size_hint_x: 2
            RippleCard:
                on_parent: root.build_me()
                on_release: root.menu.open()
                id: resistor_marking_menu
                MDLabelCenter:
                    id: resistor_marking_menu_name
                    text: "3"


    #                text: '3'
    ##                        font_size: app.app_button_size
    #                values: '3', '4', '5', '6'
    #                on_parent: root.build_resistor(self.text)
    #                on_text: root.build_resistor(self.text)
    #                option_cls: "MySpinnerOption"
        MDBoxLayout:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "./img/resistor.png"
            id: resistor_grid
            size_hint_y: 1.5
            MDLabel:
            BoxLayout:
                id: resistor_bands
                size_hint_y: 0.75
                size_hint_x: 3
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            MDLabel:
        RippleCard:
            on_release: root.calculate_resistor()
            MDLabelCenter:
                text: "Рассчитать!"
        RippleCard:
            MDLabelCenter:
                id: resistance
        MDSeparator:
            height: dp(3)
        RippleCard:
            MDLabelCenter:
                text: "Для SMD резистора впишите в поле ниже маркировку с резистора: "
                text_size: self.size

        BoxLayout:
            TextInput:
                id: smd_input
#                        font_size: app.app_font_size
                multiline: False
                halign: "center"
                padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
                on_text_validate: root.calculate_smd_resistor(self.text)
            RippleCard:
                on_release: root.calculate_smd_resistor(smd_input.text)
                MDLabelCenter:
                    text: "Рассчитать"
                    text_size: self.size

        RippleCard:
            MDLabelCenter:
                id: smd_resistance
