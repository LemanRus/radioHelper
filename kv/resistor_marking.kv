<MySpinnerOption>:
    color: [0, 0, 0, 1] if self.text in ["Белый", "Жёлтый", "Золотой", "Серебристый"] else [1, 1, 1, 1]
    background_color: self.colors[self.text] if self.text in self.colors.keys() else [0.5, 0.5, 0.5, 1]
    background_normal: ""

<CenterItem>:
    pos_hint: {"center_y": .5}
    MDLabelCenter:
        text: root.text
        pos_hint: {"center_y": .5}

<CenterList>:
    CenterItem:
        id: item_text
        text: root.center_text

<ResistorsMarking>:
    id: resistor
    name: "resistor"
    MDBoxLayout:
        orientation: "vertical"
        MDBoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Для резисторов сквозного монтажа выберите количество полос:"
            RippleCard:
                on_parent: root.build_me()
                on_release: root.menu.open()
                id: resistor_marking_menu
                MDLabelCenter:
                    id: resistor_marking_menu_name
                    text: "3"
                BoxLayout:
                    size_hint_x: 0.2
                    MDIcon:
                        icon: "chevron-down"
                        pos_hint: {"center_x": .5, "center_y": .5}
        MDSeparator:
        MDBoxLayout:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "./img/resistor.png"
            id: resistor_grid
            size_hint_y: 1.5
            MDLabel:
            BoxLayout:
                id: resistor_bands
                size_hint_y: 0.75
                size_hint_x: 3
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            MDLabel:
        MDSeparator:
        CalculateButton:
            on_release: root.calculate_resistor()
        MDSeparator:
        MDCard10:
            MDBorderedLabel:
                id: resistance
        MDSeparator:
            height: dp(5)
        MDCard10:
            MDLabelCenter:
                text: "Для SMD резистора впишите в поле ниже маркировку с резистора: "
                text_size: self.size
        MDSeparator:
        BoxLayout:
            MDCard5:
                TextInput:
                    id: smd_input
                    multiline: False
                    halign: "center"
                    padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
                    on_text_validate: root.calculate_smd_resistor(self.text)
            CalculateButton:
                size_hint_x: 0.5
                on_release: root.calculate_smd_resistor(smd_input.text)
        MDSeparator:
        MDCard10:
            MDBorderedLabel:
                id: smd_resistance
