<ResistorLEDCalculateScreen>:
    name: "LED_cal"
    BoxLayout:
        orientation: "vertical"
        MDScreenTitle:
            text: "Расчёт резисторов для светодиодов"
        MDSeparator:
            height: dp(3)
        BoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Напряжение источника питания:"
            MDCard5:
                size_hint_x: 0.2
                TextInput:
                    id: led_vol
                    text: '5'
                    multiline: False
                    halign: "center"
                    padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
            MDCard:
                size_hint_x: 0.1
                MDLabelCenter:
                    text: "В"
            MDCard:
                size_hint_x: 0.52
        BoxLayout:
            size_hint_y: 2
            BoxLayout:
                orientation: "vertical"
                BoxLayout:
                    MDCard10:
                        MDLabelCenter:
                            text: "Напряжение питания светодиода:"
                    MDCard5:
                        size_hint_x: 0.2
                        TextInput:
                            id: led_vol_input
                            multiline: False
                            halign: "center"
                            padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
                    MDCard:
                        size_hint_x: 0.1
                        MDLabelCenter:
                            text: "В"
                BoxLayout:
                    MDCard10:
                        MDLabelCenter:
                            text: "Ток светодиода:"
                    MDCard5:
                        size_hint_x: 0.2
                        TextInput:
                            id: led_cur_input
                            multiline: False
                            halign: "center"
                            padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
                    MDCard:
                        size_hint_x: 0.1
                        MDLabelCenter:
                            text: "мА"
            RippleCard:
                size_hint_x: 0.4
                on_parent: root.build_me()
                on_release: root.menu.open()
                id: resistor_marking_menu
                MDLabelCenter:
                    id: resistor_marking_menu_name
                    text: "Выберите"
                    on_text: led_vol_input.text = str(root.diodes[self.text][0])
                    on_text: led_cur_input.text = str(root.diodes[self.text][1])
                BoxLayout:
                    size_hint_x: 0.2
                    MDIcon:
                        icon: "chevron-down"
                        pos_hint: {"center_x": .5, "center_y": .5}

        BoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Количество светодиодов:"
            MDCard5:
                size_hint_x: 0.2
                TextInput:
                    id: led_quantity
                    text: '1'
                    multiline: False
                    halign: "center"
                    padding: [0, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0, 0]
            MDCard:
                size_hint_x: 0.1
                MDLabelCenter:
                    text: "шт"
            MDCard:
                size_hint_x: 0.52
        MDSeparator:
        CalculateButton:
            on_release: root.led_calculate(led_vol.text, led_vol_input.text, led_cur_input.text, led_quantity.text)
        MDSeparator:
        MDCard10:
            MDLabelCenter:
                text: "Результат:"
        BoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Расчётное сопротивление:"
            MDCard10:
                size_hint_x: 0.5
                MDBorderedLabel:
                    id: led_result
        BoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Стандартное значение:"
            MDCard10:
                size_hint_x: 0.5
                MDBorderedLabel:
                    id: led_e24
        BoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Рассеиваемая на резисторе мощность:"
            MDCard10:
                size_hint_x: 0.5
                MDBorderedLabel:
                    id: led_res_power
        BoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Потребляемый ток:"
            MDCard10:
                size_hint_x: 0.5
                MDBorderedLabel:
                    id: led_cur
