                on_text_validate:
            MDCard10:
                size_hint_x: 0.1
                MDLabelCenter:
                    text: 'мм'
        BoxLayout:
            MDCard10:
                MDLabelCenter:
                    text: "Длина намотки:"
            TextInput:
                id: inductor_length_input
