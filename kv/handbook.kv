                icon: "rectangle-outline"
                pos_hint: {"center_x": 0.5, "center_y": .5}
                size_hint_x: None
            MDLabel:
                text: "Распиновки"
                text_size: self.size
                valign: "center"
        MDSeparator:
        RippleCard30:
            on_release: root.manager.current = "connections"
            MDIcon:
                icon: "rectangle-outline"
                pos_hint: {"center_x": 0.5, "center_y": .5}
                size_hint_x: None
            MDLabel:
                text: "Типы соединений"
                text_size: self.size
                valign: "center"
        MDSeparator:
        RippleCard30:
            on_release: root.manager.current = "components"
            MDIcon:
                icon: "rectangle-outline"
                pos_hint: {"center_x": 0.5, "center_y": .5}
                size_hint_x: None
            MDLabel:
                text: "Микросхемы и компоненты"
                text_size: self.size
                valign: "center"
        MDSeparator:
        RippleCard30:
